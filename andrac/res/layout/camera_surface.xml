<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent" android:layout_height="match_parent"
	android:orientation="vertical">
	<SurfaceView android:id="@+id/surface_camera"
		android:layout_marginLeft="20dip" android:layout_marginRight="20dip"
		android:layout_marginTop="10dip" android:layout_marginBottom="5dip"
		android:layout_width="wrap_content" android:layout_height="match_parent"
		android:layout_weight="1">
	</SurfaceView>
	<LinearLayout android:layout_width="match_parent"
		android:layout_height="wrap_content" android:orientation="horizontal"
		android:layout_marginLeft="10dip" android:layout_marginRight="10dip"
		android:layout_marginTop="5dip" android:layout_marginBottom="10dip">
		<Button android:id="@+id/boton_capturar" android:layout_height="wrap_content"
			android:layout_width="match_parent" android:enabled="true"
			android:text="@string/capturar" android:onClick="capturar"
			android:layout_margin="5dip" android:layout_weight="1" />
		<Button android:id="@+id/boton_salir" android:layout_height="wrap_content"
			android:layout_width="match_parent" android:enabled="true"
			android:text="@string/cancelar" android:onClick="cancelar"
			android:layout_margin="5dip" android:layout_weight="1" />
	</LinearLayout>
</LinearLayout>