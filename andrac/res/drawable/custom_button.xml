<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
	<item android:state_pressed="true">
		<shape>
			<gradient android:startColor="@color/grey10"
				android:endColor="@color/deepSkyBlue4" android:type="linear"
				android:angle="270" />
			<stroke android:width="1dp" android:color="@color/grey10" />
			<corners android:radius="50dp" />
			<padding android:left="20dp" android:top="10dp"
				android:right="20dp" android:bottom="10dp" />
		</shape>
	</item>
	<item android:state_focused="true">
		<shape>
			<gradient android:startColor="@color/lightSteelBlue2"
				android:centerColor="@color/turquoise3" android:endColor="@color/deepSkyBlue"
				android:angle="270" />
			<stroke android:width="1dp" android:color="@color/grey10" />
			<corners android:radius="50dp" />
			<padding android:left="20dp" android:top="10dp"
				android:right="20dp" android:bottom="10dp" />
		</shape>
	</item>
	<item android:state_enabled="false">
		<shape>
			<solid android:color="@color/grey60" />
			<stroke android:width="1dp" android:color="@color/grey50" />
			<corners android:radius="50dp" />
			<padding android:left="20dp" android:top="10dp"
				android:right="20dp" android:bottom="10dp" />
		</shape>
	</item>
	<item>
		<shape>
			<gradient android:startColor="@color/lightSteelBlue2"
				android:centerColor="@color/blue1" android:endColor="@color/deepSkyBlue"
				android:angle="270" />
			<stroke android:width="1dp" android:color="@color/grey10" />
			<corners android:radius="50dp" />
			<padding android:left="20dp" android:top="10dp"
				android:right="20dp" android:bottom="10dp" />
		</shape>
	</item>
</selector>